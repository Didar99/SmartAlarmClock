    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="50dp"
        android:layout_height="50dp"
        card_view:layout_constraintBottom_toBottomOf="@+id/imageView12"
        card_view:layout_constraintEnd_toEndOf="@+id/imageView12"
        card_view:layout_constraintHorizontal_bias="0.06"
        card_view:layout_constraintStart_toStartOf="@+id/imageView12"
        card_view:layout_constraintTop_toTopOf="@+id/imageView12"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="Barcode"
        android:textColor="@color/white"
        android:textSize="20sp"
        card_view:layout_constraintBottom_toBottomOf="@+id/imageView3"
        card_view:layout_constraintStart_toEndOf="@+id/imageView3"
        card_view:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        card_view:layout_constraintBottom_toBottomOf="@+id/imageView122"
        card_view:layout_constraintEnd_toEndOf="@+id/imageView122"
        card_view:layout_constraintHorizontal_bias="0.06"
        card_view:layout_constraintStart_toStartOf="@+id/imageView122"
        card_view:layout_constraintTop_toTopOf="@+id/imageView122"
        card_view:layout_constraintVertical_bias="0.515"
